@page
@using Microsoft.AspNetCore.Mvc.RazorPages
@model AddCarModel
@{
    ViewData["Title"] = "Add a car";
    ViewData["ActivePage"] = ManageNavPages.AddCar;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="add-car-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.RegistrationNumber" class="form-control" required/>
                <label asp-for="Input.RegistrationNumber" class="form-label"></label>
                <span asp-validation-for="Input.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.CarType" class="form-control" autocomplete="" aria-required="true" required>
                    <option selected disabled hidden></option>
                    <option value="Motorcycle">Motorcycle</option>
                    <option value="Car">Car</option>
                    <option value="Camper van">Camper van</option>
                    <option value="Truck">Truck</option>
                </select>
                <label asp-for="Input.CarType"></label>
                <span asp-validation-for="Input.CarType" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

