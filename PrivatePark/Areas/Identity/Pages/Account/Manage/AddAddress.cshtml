@page
@using Microsoft.AspNetCore.Mvc.RazorPages
@model AddAddress
@{
    ViewData["Title"] = "Add a address";
    ViewData["ActivePage"] = ManageNavPages.AddAddress;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="add-address-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Street" class="form-control" required/>
                <label asp-for="Input.Street" class="form-label"></label>
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ZiptCode" class="form-control" required/>
                <label asp-for="Input.ZiptCode" class="form-label"></label>
                <span asp-validation-for="Input.ZiptCode" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" required/>
                <label asp-for="Input.City" class="form-label"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" min="1" max="500" asp-for="Input.Quantity" class="form-control" required/>
                <label asp-for="Input.Quantity" class="form-label">Number of parkingspots</label>
                <span asp-validation-for="Input.Quantity" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" min="3" max="500" asp-for="Input.Price" class="form-control" required/>
                <label asp-for="Input.Price" class="form-label">Price in NOK pr hour</label>
                <span asp-validation-for="Input.Price" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.Suitability" class="form-control" autocomplete="" aria-required="true" required>
                    <option selected disabled hidden></option>
                    <option value="Motorcycle">Motorcycle</option>
                    <option value="Car">Car</option>
                    <option value="Camper van">Camper van</option>
                    <option value="Truck">Truck</option>
                </select>
                <label asp-for="Input.Suitability"></label>
                <span asp-validation-for="Input.Suitability" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.Active" class="form-control" autocomplete="" aria-required="true" required>
                    <option selected disabled hidden></option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <label asp-for="Input.Active"></label>
                <span asp-validation-for="Input.Active" class="text-danger"></span>
            </div>
            <div class="file-upload-pp">
                <label for="fileupload">Confirm ownership of parkingspot by uploading pdf:</label>
                <br/>
                <input class="buttons" type="file" name="fileupload" value="fileupload" id="fileupload">
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 login-button">Save</button>
        </form>
    </div>
</div> 