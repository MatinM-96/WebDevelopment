@page
@using Microsoft.AspNetCore.Mvc.RazorPages
@model AddAddress
@{
    ViewData["Title"] = "Add a address";
    ViewData["ActivePage"] = ManageNavPages.AddAddress;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="add-address-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Street" class="form-control" />
                <label asp-for="Input.Street" class="form-label"></label>
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ZiptCode" class="form-control"/>
                <label asp-for="Input.ZiptCode" class="form-label"></label>
                <span asp-validation-for="Input.ZiptCode" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.City" class="form-control"/>
                <label asp-for="Input.City" class="form-label"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div> 