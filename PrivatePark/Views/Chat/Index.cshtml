        Talk.ready.then(function () {
            
            var user1Id = '@ViewData["User1Id"]';                    
            var user1Name = '@ViewData["User1Name"]';            
            var user1Email = '@ViewData["User1Email"]';
            console.log('user1Id:', user1Id);
            console.log('user1Name:', user1Name);
            console.log('user1Email:', user1Email);
              
            var me = new Talk.User({
                id: user1Id,
                name: user1Name,
                email: user1Email,
                role: 'default',
            });
            
            window.talkSession = new Talk.Session({
                appId: 't0WLJIUr',
                me: me,
            });
            
            var user2Id = '@ViewData["User2Id"]';
            var user2Name = '@ViewData["User2Name"]';
            var user2Email = '@ViewData["User2Email"]';
                
            console.log('user2Id:', user2Id);
            console.log('user2Name:', user2Name);
            console.log('user2Email:', user2Email);
            
            var other = new Talk.User({
                id: user2Id,
                name: user2Name,
                email: user2Email,
                role: 'default',
            });
                        
            var conversation = talkSession.getOrCreateConversation(
                Talk.oneOnOneId(me, other)
            );
                        
            conversation.setParticipant(me);
            conversation.setParticipant(other);   
                    
            var inbox = talkSession.createInbox({ selected: conversation });
            
            inbox.mount(document.getElementById('talkjs-container'));   
        });
        </script>
